#include <iostream>

struct Node {
    int row;
    int col;
    int value;
    Node* next;

    Node(int r, int c, int v) : row(r), col(c), value(v), next(nullptr) {}
};

class SparseMatrix {
public:
    SparseMatrix() : start(nullptr) {}

    void addNode(int row, int col, int value) {
        Node* newNode = new Node(row, col, value);
        if (!start) {
            start = newNode;
            current = start;
        } else {
            current->next = newNode;
            current = newNode;
        }
    }

    void printMatrix() {
        Node* current = start;
        while (current) {
            std::cout << current->row << " " << current->col << " " << current->value;
            current = current->next;
            if (current) {
                std::cout << " --> ";
            }
        }
        std::cout << " --> null" << std::endl;
    }

private:
    Node* start;
    Node* current;
};

int main() {
    SparseMatrix matrix;

    matrix.addNode(0, 2, 3);
    matrix.addNode(0, 4, 4);
    matrix.addNode(1, 2, 5);
    matrix.addNode(1, 3, 7);
    matrix.addNode(3, 1, 2);
    matrix.addNode(3, 2, 6);

    std::cout << "Start --> ";
    matrix.printMatrix();

    return 0;
}
